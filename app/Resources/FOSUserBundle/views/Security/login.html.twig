{% extends "FOSUserBundle::layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <div class="row">
        <div class="col s8 m4" style="position: absolute; top: 50%; left: 50%; margin-left: -215px;margin-top: -174px;">
            <div class="card darken-1">
            <div class="card-content">
                {% if error %}
                    <div id="card-alert" class="card cyan">
                        <div class="card-content white-text">
                            <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                        </div>
                        <button type="button" class="close white-text" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">Ã—</span>
                        </button>
                    </div>
                {% endif %}
                <form action="{{ path("fos_user_security_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                <div class="form-group">
                    <label class="text-muted" for="username">{{ 'security.login.username'|trans }}</label>
                    <input class="form-control d-inline-block" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                </div>

                <div class="form-group">
                    <label class="text-muted" for="password">{{ 'security.login.password'|trans }}</label>
                    <input class="form-control d-inline-block" type="password" id="password" name="_password" required="required" />
                </div>

                <div class="checkbox">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label class="text-muted" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                </div>

                <input class="btn btn-sm btn-success" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                <a class="btn btn-sm btn-info" href="{{ path('fos_user_resetting_request') }}">Forgot Password</a>
            </form>
            </div>
            </div>
        </div>
    </div>

{% endblock fos_user_content %}