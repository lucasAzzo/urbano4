<aside id="left-sidebar-nav" class="nav-expanded nav-lock nav-collapsible">
    <div class="brand-sidebar">
        <h1 class="logo-wrapper">
            <a href="index.html" class="brand-logo darken-1">
                <!--  <img src="../{{ asset('img/logo_urbano.png') }}"  alt="logo">-->
                <span class="logo-text hide-on-med-and-down">Urbano</span>
            </a>
            <a href="#" class="navbar-toggler">
                <i class="material-icons">radio_button_checked</i>
            </a>
        </h1>
    </div>

    <ul id="slide-out" class="side-nav fixed leftside-navigation">
        {% for modulo in item.children %}
            <li class="no-padding">
                <ul class="collapsible" data-collapsible="accordion">
                    <li class="bold">
                        <a class="collapsible-header waves-effect waves-cyan active">
                            <i class="material-icons">dashboard</i>
                            <span class="nav-text">{{modulo.label}}</span>
                        </a>
                        <div class="collapsible-body">
                            <div>
                                {% for submodulo in modulo.children %}
                                    <ul class="collapsible" data-collapsible="accordion">
                                        {% if submodulo.hasChildren %}
                                            <ul class="collapsible" data-collapsible="accordion">
                                                <li>
                                                    <div>
                                                        <h7>
                                                            <a class="collapsible-header waves-effect waves-cyan active">
                                                                {{submodulo.label}}
                                                            </a>
                                                        </h7>
                                                    </div>
                                                </li>

                                                <div>
                                                    <div>
                                                        <ul>
                                                            {% for operacion in submodulo.children %}
                                                                <li><a href="{{operacion.uri}}">{{operacion.label}}</a></li>
                                                                {% endfor %} 
                                                        </ul>
                                                    </div>
                                                </div>
                                            </ul>    
                                        {% else %}    
                                            <li><a href="{{submodulo.uri}}">{{submodulo.label}}</a></li>
                                            {% endif %}
                                    </ul>
                                {% endfor %}    
                            </div>
                        </div>
                    </li>
                </ul>
            </li>        
        {% endfor %}
    </ul>


</aside>                


