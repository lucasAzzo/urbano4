<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <!--Import Google Icon Font-->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <!--<link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" >-->
        <link rel="stylesheet" href="{{ asset('css/materialize.css') }}" >
        <link rel="stylesheet" href="{{ asset('css/style.css') }}" />
        <link href="{{ asset('css/font-awesome-4.7.0/css/font-awesome.min.css') }}" rel="stylesheet" />
        <link href="{{ asset('css/gijgo/css/gijgo.min.css') }}" rel="stylesheet" type="text/css" />
    </head>
    <body>
        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            {% include 'barra_superior.html.twig' %}
            <div class="row">
                <div class="col s12 m2">{{ knp_menu_render('main') }}</div>
                <div class="col s12 m10">
                    <div class="col s12 m12"><hr><h4>{% block titulo_operacion %}{% endblock %}</h4><hr></div>
                    {% for flash_message in app.session.flashbag.get('success') %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            {{ flash_message }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endfor %}
                    {% block body %}{% endblock %}
                    {% block fos_user_content %}{% endblock %}
                </div>
            </div>
        {% else %}
            {% block content %} {% endblock %}
        {% endif %}    
        
        <script src="{{ asset('js/jquery-3.2.1.slim.min.js') }}" ></script>
        <script src="{{ asset('js/materialize.js') }}" ></script>
       <!-- <script src="{{ asset('js/popper.min.js') }}" ></script>
        <script src="{{ asset('js/bootstrap.min.js') }}" ></script>
        <script src="{{ asset('js/collections.js') }}"></script>
        <script src="{{ asset('js/comun.js') }}"></script> -->
        <!--prism-->
        <script type="text/javascript" src="{{ asset('js/vendors/prism/prism.js') }}"></script>
        <!--scrollbar-->
        <script type="text/javascript" src="{{ asset('js/vendors/perfect-scrollbar/perfect-scrollbar.min.js') }}"></script>
        <!-- chartjs-->
        <script type="text/javascript" src="{{ asset('js/vendors/chartjs/chart.min.js') }}"></script>
        <!--plugins.js - Some Specific JS codes for Plugin Settings-->
        <script type="text/javascript" src="{{ asset('js/plugins.js') }}"></script>
        <!--custom-script.js - Add your own theme custom JS-->
        <script type="text/javascript" src="{{ asset('js/custom-script.js') }}"></script>
        <script src="{{ asset('js/gijgo.min.js') }}" type="text/javascript"></script>
        {% block formulario_js %}<script src="{{ asset('js/formulario.js') }}"></script>{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
