{% extends "base.html.twig" %}

{% block titulo_operacion %}Roles{% endblock %}
{% block breadcrumbs %}
        <li><a href="#">Inicio</a></li>
        <li class="active">Roles</li>
{% endblock %}

{% block body %}
    
    <div class="container">
        <div class="card-panel">
            <table class="striped">
                <thead>
                    <th>Nombre</th>
                    <th>Descripci√≥n</th>
                    <th>
                        {% if has_permission('roles_new') %}
                            <a class="btn-floating waves-effect waves-light green darken-1" type="button" href="{{path('roles_new')}}"><i class="material-icons">add</i></a>
                        {% endif %}
                    </th>
                </thead>
                {% for role in roles %}
                    <tr>
                        <td>{{ role.role }}</td>
                        <td>{{ role.description }}</td>
                        <td>
                            {% if has_permission('roles_edit') %}<a class="btn-floating waves-effect waves-light cyan" type="button" href="{{path('roles_edit',{'_id':role.id})}}"><i class="material-icons">mode_edit</i></a>{% endif %}
                            {% if has_permission('roles_delete') %}<a class="btn-floating waves-effect waves-light red" type="button" href="{{path('roles_delete',{'_id':role.id})}}"><i class="material-icons">clear</i></a>{% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>        
   

{% endblock %}
