{% extends 'base.html.twig' %}

{% block titulo_operacion %}ESTADOS{% endblock %}
{% block breadcrumbs %}
        <li><a href="#">Inicio</a></li>
        <li class="active">Estados</li>
{% endblock %}
{% block body %}

<div class="container">
        <div class="card-panel">
            <table class="striped">
                <thead>
                    <tr>
                        <th>Estado</th>
                        <th>Abreviado</th>
                        <th>{#<a type="button" class="btn-floating waves-effect waves-light green darken-1" href="{{path('estado_new')}}"><i class="material-icons">add</i></a>#}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for estado in estados %}
                        <tr>
                            <td>{{estado.estado}}</td>
                            <td>{{estado.abreviado}}</td>
                            <td>{#<a type="button" class="btn-floating waves-effect waves-light cyan" href="{{path('estado_edit',{'id_estado':estado.idEstado})}}"><i class="material-icons">mode_edit</i></a>#}
                                {#<a type="button" class="btn-floating waves-effect waves-light red" href="{{path('estado_delete',{'id_estado':estado.idEstado})}}"><i class="material_icons">clear</i></a>#}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
</div>                

{% endblock %}