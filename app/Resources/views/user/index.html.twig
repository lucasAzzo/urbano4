{% extends "base.html.twig" %}

{% block title %}Users{% endblock %}

{% block body %}
    <div class="row">
        <div class="col m12">
            <div class="card">
                <div class="card-content">
                    <h1>Users List Page</h1>
                    <table class="responsive-table striped">
                        <thead>
                            <tr>
                                <th>Nombre de Usuario</th>
                                <th>Email</th>
                                <th>Roles</th>
                                <th colspan="2">
                                    <a class="btn-floating waves-effect waves-light green" href="{{ path('users_new') }}"><i class="material-icons left">add</i>Nuevo</a>
                                </th>
                            </tr>
                        </thead>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.username }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.roles|join(' | ') }}</td>
                                <td>
                                    <a href="{{ path('users_edit', { 'id' : user.id }) }}" class="btn-floating waves-effect waves-light"><i class="material-icons">create</i></a>
                                </td>
                                <td>
                                    <form method="POST" action="{{ path('users_delete', { 'id' : user.id }) }}">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button type="submit" class="btn-floating waves-effect waves-light red"><i class="material-icons">clear</i></button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
