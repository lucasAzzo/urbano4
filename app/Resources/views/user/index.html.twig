                    <form method="POST" action="{{ path('users_delete', { 'id' : user.id }) }}">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="submit" value="Eliminar">
                    </form>
                </td> #}
            </tr>
        {% endfor %}
    </table>

{% endblock %}
