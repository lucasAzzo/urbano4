{% extends "base.html.twig" %}

{% block title %}Users{% endblock %}

{% block body %}
    
    <h1>Users List Page</h1>
    <table class="table">
        <tr>
            <th>Nombre de Usuario</th>
            <th>Email</th>
            <th>Roles</th>
            <th colspan="2">
                <a href="{{ path('users_new') }}">Crear Nuevo</a>
            </th>
        </tr>
