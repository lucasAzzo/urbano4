{% extends 'base.html.twig' %}
{% form_theme formulario with 'form/fields.html.twig' %}

{% block titulo_operacion %}ZONAS{% endblock %}
{% block breadcrumbs %}
    <li><a href="#">Inicio</a></li>
    <li class="active">Nueva Zona</li>
{% endblock %}

{% block body %}

<div class="container">
    <div class="card-panel">
        <h4 class="header2">Nueva Zona</h4>
        {{ form_start(formulario) }}

        {{ form_errors(formulario) }}

        <div class="row">
            <div class="input-field col s6">
                {{ form_label(formulario.zona) }}
                {{ form_widget(formulario.zona) }}
            </div>
        </div>

        <table id="subzonas" class="collection-fields-list" data-prototype="{{ form_widget(formulario.subzonas.vars.prototype)|e }}">
            <thead>
                <tr>
                    <th>Subzonas
                        <button type="button" class="btn-floating waves-effect waves-light green darken-1 add-another-collection"><i class="material-icons">add</i></button></th>
                </tr>
            </thead>
            <tbody>
                {% for subzona in formulario.subzonas %}
                    <tr>
                        {{ form_widget(subzona) }}
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div>
            <a type="button" href="{{path('zona_index')}}" class="btn waves-effect waves-light red accent-2">Volver</a>
            <input type="submit" value="Guardar" class="btn btn-sm btn-success" />
        </div>
        {{ form_end(formulario) }}
    </div>
</div>    

{% endblock %}


